{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col md-auto">
            {{ form_start(structureForm) }}
                <fieldset>
                    <legend>Information du g√©rant</legend>
                    {{ form_row(structureForm.email) }}
                    {{ form_row(structureForm.plainPassword) }}        
